{
  "manifest_version": 3,
  "name": "ChemInf Studio",
  "description": "Access a suite of powerful Cheminformatics tools directly on your web pages.",
  "version": "0.0.4",
  "background": {
    "service_worker": "/background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "permissions": ["storage", "tabs"],
  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png",
    "256": "icons/256.png"
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["/content.js"]
    }
  ],
  "options_page": "options.html"
}
